<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.9" method="upgrade" client="site">
	<name>mod_dpcalendar_mini</name>
	<author>Digital Peak</author>
	<creationDate>23 Jun 2022</creationDate>
	<copyright>(C) 2014 Digital Peak GmbH</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>info@digital-peak.com</authorEmail>
	<authorUrl>joomla.digital-peak.com</authorUrl>
	<version>8.4.0</version>
	<description>MOD_DPCALENDAR_MINI_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_dpcalendar_mini">mod_dpcalendar_mini.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<media destination="mod_dpcalendar_mini" folder="media">
		<folder>css</folder>
	</media>
	<config>
		<fields name="params"
			 addfieldpath="/administrator/components/com_dpcalendar/models/fields"
			 addrulepath="/administrator/components/com_dpcalendar/models/rules">
			<fieldset name="basic">
				<field name="ids" type="dpcalendar" multiple="true" class="dp-select" required="true"
					label="MOD_DPCALENDAR_MINI_FIELD_SELECT_CALENDARS_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_SELECT_CALENDARS_DESC"/>
				<field name="compact_events" type="list" default="2"
					label="MOD_DPCALENDAR_MINI_FIELD_COMPACT_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_COMPACT_DESC">
					<option value="1">JYES</option>
					<option value="2">MOD_DPCALENDAR_MINI_FIELD_COMPACT_SINGLE</option>
					<option value="0">JNO</option>
				</field>
				<field name="event_color" type="color" default="#135CAE" showon="compact_events:1" size="6"
					label="MOD_DPCALENDAR_MINI_FIELD_CALENDAR_COLOR_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_CALENDAR_COLOR_DESC"/>
				<field name="open_view" type="list" default="day" showon="compact_events:1"
					label="MOD_DPCALENDAR_MINI_FIELD_OPENVIEW_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_OPENVIEW_DESC">
					<option value="month">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_MONTH</option>
					<option value="week">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_WEEK</option>
					<option value="day">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_DAY</option>
					<option value="list">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_LIST</option>
				</field>
				<field name="default_view" type="list" default="month"
					label="MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_DESC">
					<option value="month">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_MONTH</option>
					<option value="week">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_WEEK</option>
					<option value="day">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_DAY</option>
					<option value="list">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_LIST</option>
				</field>
				<field name="weekstart" type="list" default="0"
					label="MOD_DPCALENDAR_MINI_FIELD_WEEK_START_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_WEEK_START_DESC">
					<option value="0">MOD_DPCALENDAR_MINI_FIELD_WEEK_START_SUNDAY</option>
					<option value="1">MOD_DPCALENDAR_MINI_FIELD_WEEK_START_MONDAY</option>
					<option value="2">MOD_DPCALENDAR_MINI_FIELD_WEEK_START_TUESDAY</option>
					<option value="3">MOD_DPCALENDAR_MINI_FIELD_WEEK_START_WEDNESDAY</option>
					<option value="4">MOD_DPCALENDAR_MINI_FIELD_WEEK_START_THURSDAY</option>
					<option value="5">MOD_DPCALENDAR_MINI_FIELD_WEEK_START_FRIDAY</option>
					<option value="6">MOD_DPCALENDAR_MINI_FIELD_WEEK_START_SATURDAY</option>
				</field>
				<field name="weekend" type="radio" class="btn-group" default="1"
					label="MOD_DPCALENDAR_MINI_FIELD_SHOW_WEEKEND_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_SHOW_WEEKEND_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="fixed_week_count" type="radio" class="btn-group" default="1"
					label="MOD_DPCALENDAR_MINI_FIELD_FIXED_WEEK_COUNT_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_FIXED_WEEK_COUNT_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="week_numbers" type="radio" class="btn-group"
					default="0" label="MOD_DPCALENDAR_MINI_FIELD_SHOW_WEEK_NUMBER_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_SHOW_WEEK_NUMBER_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="overlap_events" type="radio" class="btn-group"
					default="1" label="MOD_DPCALENDAR_MINI_FIELD_OVERLAP_EVENTS_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_OVERLAP_EVENTS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="agenda_slot_minutes" type="text" default="30"
					label="MOD_DPCALENDAR_MINI_FIELD_AGENDA_SLOT_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_AGENDA_SLOT_DESC"/>
				<field name="calendar_height" type="text" default="0"
					label="MOD_DPCALENDAR_MINI_FIELD_HEIGHT_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_HEIGHT_DESC"/>
				<field name="event_limit" type="text" size="50"
					label="MOD_DPCALENDAR_MINI_FIELD_EVENT_LIMIT_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_EVENT_LIMIT_DESC"/>
				<field name="titleformat_month" type="text" default="F Y"
					label="MOD_DPCALENDAR_MINI_FIELD_TITLE_FORMAT_MONTH_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_TITLE_FORMAT_MONTH_DESC"/>
				<field name="titleformat_week" type="text" default="M j Y"
					label="MOD_DPCALENDAR_MINI_FIELD_TITLE_FORMAT_WEEK_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_TITLE_FORMAT_WEEK_DESC"/>
				<field name="titleformat_day" type="text" default="F j Y"
					label="MOD_DPCALENDAR_MINI_FIELD_TITLE_FORMAT_DAY_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_TITLE_FORMAT_DAY_DESC"/>
				<field name="titleformat_list" type="text" default="M j Y"
					label="MOD_DPCALENDAR_MINI_FIELD_TITLE_FORMAT_LIST_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_TITLE_FORMAT_LIST_DESC"/>
				<field name="timeformat_month" type="text" default="H:i"
					label="MOD_DPCALENDAR_MINI_FIELD_TIME_FORMAT_MONTH_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_TIME_FORMAT_MONTH_DESC"/>
				<field name="timeformat_week" type="text" default="H:i"
					label="MOD_DPCALENDAR_MINI_FIELD_TIME_FORMAT_WEEK_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_TIME_FORMAT_WEEK_DESC"/>
				<field name="timeformat_day" type="text" default="H:i"
					label="MOD_DPCALENDAR_MINI_FIELD_TIME_FORMAT_DAY_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_TIME_FORMAT_DAY_DESC"/>
				<field name="timeformat_list" type="text" default="H:i"
					label="MOD_DPCALENDAR_MINI_FIELD_TIME_FORMAT_LIST_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_TIME_FORMAT_LIST_DESC"/>
				<field name="columnformat_month" type="text" default="D"
					label="MOD_DPCALENDAR_MINI_FIELD_COLUMN_FORMAT_MONTH_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_COLUMN_FORMAT_MONTH_DESC"/>
				<field name="columnformat_week" type="text" default="D n/j"
					label="MOD_DPCALENDAR_MINI_FIELD_COLUMN_FORMAT_WEEK_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_COLUMN_FORMAT_WEEK_DESC"/>
				<field name="columnformat_day" type="text" default="l"
					label="MOD_DPCALENDAR_MINI_FIELD_COLUMN_FORMAT_DAY_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_COLUMN_FORMAT_DAY_DESC"/>
				<field name="columnformat_list" type="text" default="D"
					label="MOD_DPCALENDAR_MINI_FIELD_COLUMN_FORMAT_LIST_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_COLUMN_FORMAT_LIST_DESC"/>
				<field name="axisformat_month" type="text" default="l j"
					label="MOD_DPCALENDAR_MINI_FIELD_AXIS_FORMAT_MONTH_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_AXIS_FORMAT_MONTH_DESC"/>
				<field name="axisformat_week" type="text" default="H:i"
					label="MOD_DPCALENDAR_MINI_FIELD_AXIS_FORMAT_WEEK_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_AXIS_FORMAT_WEEK_DESC"/>
				<field name="axisformat_day" type="text" default="H:i"
					label="MOD_DPCALENDAR_MINI_FIELD_AXIS_FORMAT_DAY_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_AXIS_FORMAT_DAY_DESC"/>
				<field name="dayformat_list" type="text" default="l"
					label="MOD_DPCALENDAR_MINI_FIELD_DAY_FORMAT_LIST_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_DAY_FORMAT_LIST_DESC"/>
				<field name="dateformat_list" type="text" default="F j, Y"
					label="MOD_DPCALENDAR_MINI_FIELD_DATE_FORMAT_LIST_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_DATE_FORMAT_LIST_DESC"/>
				<field name="list_range" type="text" default="30"
					label="MOD_DPCALENDAR_MINI_FIELD_LIST_RANGE_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_LIST_RANGE_DESC"/>
				<field name="header_show_navigation" type="radio" class="btn-group" default="1"
					label="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_NAVIGATION_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_NAVIGATION_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="header_show_title" type="radio" class="btn-group" default="1"
					label="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_TITLE_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_TITLE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="header_show_month" type="radio" class="btn-group" default="0"
					label="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_MONTH_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_MONTH_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="header_show_week" type="radio" class="btn-group"
					label="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_WEEK_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_WEEK_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="header_show_day" type="radio" class="btn-group" default="0"
					label="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_DAY_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_DAY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="header_show_list" type="radio" class="btn-group" default="0"
					label="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_LIST_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_HEADER_SHOW_LIST_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_event_as_popup" type="list" class="btn-group" default="0"
					label="MOD_DPCALENDAR_MINI_FIELD_OPEN_EVENT_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_OPEN_EVENT_DESC">
					<option value="0">MOD_DPCALENDAR_MINI_FIELD_OPEN_EVENT_FULL</option>
					<option value="1">MOD_DPCALENDAR_MINI_FIELD_OPEN_EVENT_MODAL</option>
					<option value="2">JDISABLED</option>
				</field>
				<field name="popup_width" type="text" showon="show_event_as_popup:1"
					label="MOD_DPCALENDAR_MINI_FIELD_OPEN_EVENT_MODAL_WIDTH_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_OPEN_EVENT_MODAL_WIDTH_DESC"/>
				<field name="popup_height" type="text" default="500" showon="show_event_as_popup:1"
					label="MOD_DPCALENDAR_MINI_FIELD_OPEN_EVENT_MODAL_HEIGHT_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_OPEN_EVENT_MODAL_HEIGHT_DESC"/>
				<field name="description_length" type="text" size="10" default="100"
					label="MOD_DPCALENDAR_MINI_FIELD_DESC_COUNT_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_DESC_COUNT_DESC"/>
				<field name="adjust_fg_color" type="list" default="2"
					label="MOD_DPCALENDAR_MINI_FIELD_ADJUST_FG_COLOR_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_ADJUST_FG_COLOR_DESC">
					<option value="0">JNO</option>
					<option value="1">MOD_DPCALENDAR_MINI_FIELD_ADJUST_FG_COLOR_INVERSE</option>
					<option value="2">MOD_DPCALENDAR_MINI_FIELD_ADJUST_FG_COLOR_BW</option>
				</field>
				<field name="show_map" type="radio" class="btn-group" default="0"
					label="MOD_DPCALENDAR_MINI_FIELD_SHOW_MAP_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_SHOW_MAP_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="map_zoom" type="text" default="4" size="5" showon="show_map:1"
					label="MOD_DPCALENDAR_MINI_FIELD_MAP_ZOOM_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_MAP_ZOOM_DESC"/>
				<field name="map_width" type="text" default="100%" size="10" showon="show_map:1"
					label="MOD_DPCALENDAR_MINI_FIELD_MAP_WIDTH_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_MAP_WIDTH_DESC"/>
				<field name="map_height" type="text" default="350px" size="10" showon="show_map:1"
					label="MOD_DPCALENDAR_MINI_FIELD_MAP_HEIGHT_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_MAP_HEIGHT_DESC"/>
				<field name="map_lat" type="text" default="47" validate="decimal" showon="show_map:1"
					label="MOD_DPCALENDAR_MINI_FIELD_MAP_LATITUDE_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_MAP_LATITUDE_DESC"/>
				<field name="map_long" type="text" default="4" validate="decimal" showon="show_map:1"
					label="MOD_DPCALENDAR_MINI_FIELD_MAP_LONGITUDE_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_MAP_LONGITUDE_DESC"/>
				<field name="first_hour" type="text" default="6"
					label="MOD_DPCALENDAR_MINI_FIELD_FIRST_HOUR_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_FIRST_HOUR_DESC"/>
				<field name="min_time" type="text" default="0" description="MOD_DPCALENDAR_MINI_FIELD_MIN_TIME_DESC"/>
				<field name="max_time" type="text" default="24"
					label="MOD_DPCALENDAR_MINI_FIELD_MAX_TIME_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_MAX_TIME_DESC"/>
				<field name="current_time_indicator" type="radio" class="btn-group" default="1"
					label="MOD_DPCALENDAR_MINI_FIELD_CURRENT_TIME_INDICATOR_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_CURRENT_TIME_INDICATOR_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="hidden_days" type="list" multiple="true"
					label="MOD_DPCALENDAR_MINI_FIELD_HIDDEN_DAYS_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_HIDDEN_DAYS_DESC">
					<option value="1">MONDAY</option>
					<option value="2">TUESDAY</option>
					<option value="3">WEDNESDAY</option>
					<option value="4">THURSDAY</option>
					<option value="5">FRIDAY</option>
					<option value="6">SATURDAY</option>
					<option value="0">SUNDAY</option>
				</field>
				<field name="business_hours_start" type="text" default=""
					label="MOD_DPCALENDAR_MINI_FIELD_BUSINESS_HOURS_START_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_BUSINESS_HOURS_START_DESC"/>
				<field name="business_hours_end" type="text" default=""
					label="MOD_DPCALENDAR_MINI_FIELD_BUSINESS_HOURS_END_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_BUSINESS_HOURS_END_DESC"/>
				<field name="business_hours_days" type="list" multiple="true"
					label="MOD_DPCALENDAR_MINI_FIELD_BUSINESS_HOURS_DAYS_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_BUSINESS_HOURS_DAYS_DESC">
					<option value="1">MONDAY</option>
					<option value="2">TUESDAY</option>
					<option value="3">WEDNESDAY</option>
					<option value="4">THURSDAY</option>
					<option value="5">FRIDAY</option>
					<option value="6">SATURDAY</option>
					<option value="0">SUNDAY</option>
				</field>
				<field name="calendar_filter_author" type="dpauthor" default="0" table_name="dpcalendar_events"
						label="MOD_DPCALENDAR_MINI_FIELD_FILTER_AUTHOR_LABEL"
						description="MOD_DPCALENDAR_MINI_FIELD_FILTER_AUTHOR_DESC">
					<option value="-1">MOD_DPCALENDAR_MINI_FIELD_FILTER_AUTHOR_MY</option>
					<option value="0">JNONE</option>
				</field>
				<field name="calendar_filter_locations" type="location" multiple="true"
					label="MOD_DPCALENDAR_MINI_FIELD_FILTER_LOCATIONS_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_FILTER_LOCATIONS_DESC"/>
				<field name="calendar_resource_views" type="list" multiple="true" showon="calendar_filter_locations!:"
					label="MOD_DPCALENDAR_MINI_FIELD_RESOURCES_VIEWS_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_RESOURCES_VIEWS_DESC">
					<option value=""></option>
					<option value="month">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_MONTH</option>
					<option value="week">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_WEEK</option>
					<option value="day">MOD_DPCALENDAR_MINI_FIELD_DEFAULT_VIEW_DAY</option>
				</field>
				<field name="calendar_filter_tags" type="tag" multiple="true" mode="nested"
					label="MOD_DPCALENDAR_MINI_FIELD_FILTER_TAGS_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_FILTER_TAGS_DESC"/>
				<field name="screen_size_list_view" type="text" default="500"
					label="MOD_DPCALENDAR_MINI_FIELD_SCREEN_SIZE_LIST_VIEW_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_SCREEN_SIZE_LIST_VIEW_DESC"/>
			</fieldset>

			<fieldset name="advanced">
				<field name="start_date" type="text"
					label="MOD_DPCALENDAR_MINI_FIELD_DATE_START_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_DATE_START_DESC"/>
				<field name="layout" type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
				<field name="moduleclass_sfx" type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"/>
				<field name="custom_css" type="textarea" filter="JComponentHelper::filterText"
					label="MOD_DPCALENDAR_MINI_FIELD_CUSTOM_CSS_LABEL" description="MOD_DPCALENDAR_MINI_FIELD_CUSTOM_CSS_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
