<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="search" method="upgrade">
	<name>plg_search_dpcalendar</name>
	<author>Digital Peak</author>
	<creationDate>24 Feb 2022</creationDate>
	<copyright>(C) 2014 Digital Peak GmbH</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>info@digital-peak.com</authorEmail>
	<authorUrl>joomla.digital-peak.com</authorUrl>
	<version>8.2.4</version>
	<description>PLG_SEARCH_DPCALENDAR_XML_DESCRIPTION</description>
	<files>
		<filename plugin="dpcalendar">dpcalendar.php</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text" default="50"
				       label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL" description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"/>

				<field name="search_content" type="radio" default="1" class="btn-group"
				       label="JFIELD_PLG_SEARCH_ALL_LABEL" description="JFIELD_PLG_SEARCH_ALL_DESC">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>

				<field name="search_archived" type="radio" default="0" class="btn-group"
				       label="JFIELD_PLG_SEARCH_ARCHIVED_LABEL" description="JFIELD_PLG_SEARCH_ARCHIVED_DESC">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="pastevents" type="radio" default="1" class="btn-group"
				       label="PLG_SEARCH_DPCALENDAR_FIELD_PAST_EVENTS_LABEL" description="PLG_SEARCH_DPCALENDAR_FIELD_PAST_EVENTS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="show_my_only" type="radio" default="0" class="btn-group"
				       label="PLG_SEARCH_DPCALENDAR_FIELD_SHOW_MY_ONLY_LABEL" description="PLG_SEARCH_DPCALENDAR_FIELD_SHOW_MY_ONLY_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="date_format" type="text" default="d.m.Y"
				       label="PLG_SEARCH_DPCALENDAR_FIELD_DATE_FORMAT_LABEL" description="PLG_SEARCH_DPCALENDAR_FIELD_DATE_FORMAT_DESC"/>
				<field name="time_format" type="text" default="H:i"
				       label="PLG_SEARCH_DPCALENDAR_FIELD_TIME_FORMAT_LABEL" description="PLG_SEARCH_DPCALENDAR_FIELD_TIME_FORMAT_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
