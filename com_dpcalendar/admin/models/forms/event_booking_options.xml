<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>
		<field name="price" type="text" required="true"
		       label="COM_DPCALENDAR_FIELD_PRICE_PRICE_LABEL"/>
		<field name="amount" type="text" pattern="\d*" required="true" label="COM_DPCALENDAR_FIELD_BOOKING_OPTIONS_MAX_AMOUNT_LABEL"/>
		<field name="min_amount" type="text" pattern="\d*" default="0" required="false" label="COM_DPCALENDAR_FIELD_BOOKING_OPTIONS_MIN_AMOUNT_LABEL"/>
		<field name="label" type="text" required="true" label="COM_DPCALENDAR_FIELD_EARLYBIRD_LABEL_LABEL"/>
		<field name="description" type="textarea" filter="JComponentHelper::filterText"
		       label="COM_DPCALENDAR_FIELD_EARLYBIRD_DESCRIPTION_LABEL"/>
	</fields>
</form>
