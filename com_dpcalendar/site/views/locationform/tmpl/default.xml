<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_DPCALENDAR_VIEW_LOCATIONFORM_DEFAULT_TITLE" option="COM_DPCALENDAR_VIEW_LOCATIONFORM_DEFAULT_OPTION">
		<message>
			<![CDATA[COM_DPCALENDAR_VIEW_LOCATIONFORM_DEFAULT_DESC]]>
		</message>
	</layout>
	<fields name="params" addfieldpath="/administrator/components/com_dpcalendar/models/fields">
		<fieldset name="basic">
			<field name="location_form_flat_mode" type="list" useglobal="true"
				label="COM_DPCALENDAR_FIELD_CONFIG_FORM_FLAT_MODE_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_FORM_FLAT_MODE_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="location_form_fields_order_" type="subform" multiple="true"
				layout="joomla.form.field.subform.repeatable-table" showon="location_form_flat_mode:1"
				label="COM_DPCALENDAR_FIELD_CONFIG_FIELD_ORDER_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_FIELD_ORDER_DESC">
				<form>
					<field name="field" type="dpcfields" section="location" hide="id,checked_out*,options"
						label="COM_DPCALENDAR_FIELD"/>
				</form>
			</field>
			<field name="location_form_country" type="list" useglobal="true"
			    label="COM_DPCALENDAR_LOCATION_FIELD_COUNTRY_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHOW_FIELD_DESC">
				<option value="1">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_OPTIONAL</option>
				<option value="2">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_REQUIRED</option>
				<option value="0">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_HIDDEN</option>
			</field>
			<field name="location_form_province" type="list" useglobal="true"
			    label="COM_DPCALENDAR_LOCATION_FIELD_PROVINCE_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHOW_FIELD_DESC">
				<option value="1">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_OPTIONAL</option>
				<option value="2">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_REQUIRED</option>
				<option value="0">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_HIDDEN</option>
			</field>
			<field name="location_form_city" type="list" useglobal="true"
			    label="COM_DPCALENDAR_LOCATION_FIELD_CITY_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHOW_FIELD_DESC">
				<option value="1">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_OPTIONAL</option>
				<option value="2">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_REQUIRED</option>
				<option value="0">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_HIDDEN</option>
			</field>
			<field name="location_form_zip" type="list" useglobal="true"
			    label="COM_DPCALENDAR_LOCATION_FIELD_ZIP_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHOW_FIELD_DESC">
				<option value="1">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_OPTIONAL</option>
				<option value="2">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_REQUIRED</option>
				<option value="0">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_HIDDEN</option>
			</field>
			<field name="location_form_street" type="list" useglobal="true"
			    label="COM_DPCALENDAR_LOCATION_FIELD_STREET_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHOW_FIELD_DESC">
				<option value="1">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_OPTIONAL</option>
				<option value="2">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_REQUIRED</option>
				<option value="0">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_HIDDEN</option>
			</field>
			<field name="location_form_number" type="list" useglobal="true"
			    label="COM_DPCALENDAR_LOCATION_FIELD_NUMBER_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHOW_FIELD_DESC">
				<option value="1">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_OPTIONAL</option>
				<option value="2">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_REQUIRED</option>
				<option value="0">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_HIDDEN</option>
			</field>
			<field name="location_form_url" type="list" useglobal="true"
			    label="COM_DPCALENDAR_FIELD_URL_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHOW_FIELD_DESC">
				<option value="1">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_OPTIONAL</option>
				<option value="2">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_REQUIRED</option>
				<option value="0">COM_DPCALENDAR_FIELD_CONFIG_BOOKINGFORM_HIDDEN</option>
			</field>
			<field name="location_form_show_map" type="list" useglobal="true"
			    label="COM_DPCALENDAR_FIELD_CONFIG_LIST_SHOW_MAP_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_LIST_SHOW_MAP_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="location_form_map_zoom" type="text" useglobal="true"
			    label="COM_DPCALENDAR_FIELD_CONFIG_CALENDAR_MAP_ZOOM_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_CALENDAR_MAP_ZOOM_DESC"/>
			<field name="location_form_map_width" type="text" useglobal="true"
			    label="COM_DPCALENDAR_FIELD_CONFIG_CALENDAR_MAP_WIDTH_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_CALENDAR_MAP_WIDTH_DESC"/>
			<field name="location_form_map_height" type="text" useglobal="true"
			    label="COM_DPCALENDAR_FIELD_CONFIG_CALENDAR_MAP_HEIGHT_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_CALENDAR_MAP_HEIGHT_DESC"/>
			<field name="location_form_map_latitude" type="text" useglobal="true"
			    label="COM_DPCALENDAR_FIELD_CONFIG_CALENDAR_MAP_LATITUDE_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_CALENDAR_MAP_LATITUDE_DESC"/>
			<field name="location_form_map_longitude" type="text" useglobal="true"
			    label="COM_DPCALENDAR_FIELD_CONFIG_CALENDAR_MAP_LONGITUDE_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_CALENDAR_MAP_LONGITUDE_DESC"/>

			<field name="location_form_redirect" type="modal_article" select="true" new="true" edit="true" clear="true" class="dp-form-input"
				addfieldpath="/administrator/components/com_content/models/fields" addfieldprefix="Joomla\Component\Content\Administrator\Field"
				label="COM_DPCALENDAR_FIELD_CONFIG_FORM_REDIRECT_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_FORM_REDIRECT_DESC"/>
			<field name="location_form_custom_css" type="textarea" filter="JComponentHelper::filterText" useglobal="true"
			    label="COM_DPCALENDAR_FIELD_CONFIG_CUSTOM_CSS_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_CUSTOM_CSS_DESC"/>
		</fieldset>
	</fields>
</metadata>
